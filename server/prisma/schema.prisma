generator client {
  provider = "prisma-client-js"
}

model User {
  id String @unique @default(uuid())

  username   String @unique
  firstName  String
  lastName   String
  email      String
  profileUrl String
  password   String

  sessions Session[]
}

model Session {
  id        String   @unique
  userId    String
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
